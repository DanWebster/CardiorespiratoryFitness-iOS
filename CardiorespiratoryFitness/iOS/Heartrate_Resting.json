{
    "identifier": "Resting Heartrate",
    "schemaInfo": {
        "identifier": "Heartrate Measurement",
        "revision": 9
    },
    "usesTrackedData": true,
    "shouldHideActions": ["goBackward", "skip"],
    "progressMarkers": [],
    "steps": [{
        "identifier": "introduction",
        "type": "overview",
        "title": "Resting heart rate",
        "text": "Your heart rate while you are at rest is a marker of your health. The more relaxed you are, the better. Let's measure your resting heart rate.",
        "permissions": [{
            "permissionType": "camera",
            "reason": "Heart Snapshot uses the camera and flash on the back of your phone to measure your heart rate."
        }],
        "image": {
            "type": "fetchable",
            "imageName": "restingHoldPhone",
            "placementType": "topBackground"
        },
        "icons": [{
            "icon": "ComfortablePlaceToSit",
            "title": "COMFORTABLE PLACE TO SIT"
        }],
        "actions": {
            "goForward": {
                "type": "default",
                "buttonTitle": "Measure"
            },
            "skip": {
                "type": "reminder",
                "reminderIdentifier": "Resting Heartrate"
            }
        }
    },
    {
        "identifier": "sitDownInstruction",
        "type": "instruction",
        "title": "Sit down and relax",
        "text": "If you don't feel relaxed, take a moment and breathe slowly before starting the measurement.",
        "image": {
            "type": "fetchable",
            "imageName": "sittingDown",
            "placementType": "topBackground"
        },
        "actions": {
            "goForward": {
                "type": "default",
                "buttonTitle": "Measure"
            },
            "learnMore": {
                "type": "webView",
                "title": "Tips for measuring resting heart rate",
                "usesBackButton": true,
                "url": "rhr-tips.html",
                "buttonTitle": "Tips for measuring"
            }
        }
    },
    {
        "identifier": "coverFlash",
        "type": "instruction",
        "title": "Cover the flash and camera",
        "text": "Use your finger to cover the camera and flash on the back of your phone. Your finger nail should turn a little red once you cover the flash.",
        "image": {
            "type": "fetchable",
            "imageName": "fingerOverFlash",
            "placementType": "topMarginBackground"
        },
        "actions": {
            "goForward": {
                "type": "default",
                "buttonTitle": "Measure heart rate"
            }
        }
    },
    {
        "identifier": "hr1",
        "type": "heartRate",
        "isResting": true
    },
    {
        "identifier": "feedback1",
        "type": "feedback",
        "resultTitle": "Your resting heart rate is",
        "resultIdentifier": "hr1_resting",
        "unitText": "BPM",
        "title": "Measure twice",
        "text": "Many things can influence your measurement. To improve the accuracy, let's meaure it one more time.",
        "actions": {
            "learnMore": {
                "type": "webView",
                "title": "What is a ‘normal’ resting heart rate?",
                "usesBackButton": true,
                "url": "Normal_HR.html",
                "buttonTitle": "What is a ‘normal’ resting HR?"
            }
        }
    },
    {
        "identifier": "hr",
        "type": "heartRate",
        "isResting": true
    },
    {
        "identifier": "feedback",
        "type": "completion",
        "resultTitle": "Your resting heart rate is",
        "resultIdentifier": "hr_resting",
        "unitText": "BPM",
        "title": "Resting HR Captured!",
        "text": "Great job measuring your heart at rest. We've finished the first half of your heart snapshot, so let's continue on to the next step.",
        "actions": {
            "goForward": {
                "type": "default",
                "buttonTitle": "Done"
            },
            "learnMore": {
                "type": "webView",
                "title": "What is a ‘normal’ resting heart rate?",
                "usesBackButton": true,
                "url": "Normal_HR.html",
                "buttonTitle": "What is a ‘normal’ resting HR?"
            }
        }
    }
    ]
}
